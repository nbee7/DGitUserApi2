<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DGitUserApi2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fillColor">@color/black</item>
    </style>

    <style name="DFGitUserTextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="searchText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DFGitUserTextView.Black">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="DFGitUserTextView.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DFGitUserTextView.White.Light">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="DFGitUserTextView.Black.Light">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="DFGitUserTextView.Black.ExtraLight">
        <item name="android:fontFamily">@font/poppins_extralight</item>
    </style>

    <style name="DFGitUserTextView.White.ExtraLight">
        <item name="android:fontFamily">@font/poppins_extralight</item>
    </style>

    <style name="DFGitUserTextView.Black.Light.UserSize">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DFGitUserTextView.White.Light.UserSize">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DFGitUserTextView.Black.Light.UserSize.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DFGitUserTextView.Black.ExtraLight.DescSize">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DFGitUserTextView.White.ExtraLight.DescSize">
        <item name="android:textSize">12sp</item>
    </style>
</resources>